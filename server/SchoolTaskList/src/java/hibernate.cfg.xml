<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/schooltasklist</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">123456</property>
    <mapping resource="com/pega/schooltasklist/database/object/Groupuser.hbm.xml"/>
    <mapping resource="com/pega/schooltasklist/database/object/Schoolgroup.hbm.xml"/>
    <mapping resource="com/pega/schooltasklist/database/object/Role.hbm.xml"/>
    <mapping resource="com/pega/schooltasklist/database/object/Task.hbm.xml"/>
    <mapping resource="com/pega/schooltasklist/database/object/User.hbm.xml"/>
    <mapping resource="com/pega/schooltasklist/database/object/Taskuser.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
