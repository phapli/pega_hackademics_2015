<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="schooltasklist.pega.com.activity.ActivityMain"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_activitymain_setting"
        android:layout_margin="40px"
        android:layout_width="40px"
        android:layout_height="40px"
        android:src="@drawable/settingdeactive"/>
    <TextView
        android:id="@+id/tv_activitymain_title"
        android:layout_width="wrap_content"
        android:layout_height="40px"
        android:text="aaaaaaa"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/iv_activitymain_setting"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tv_activitymain_setting"
        android:layout_margin="40px"
        android:layout_width="40px"
        android:layout_height="40px"
        android:src="@drawable/settingdeactive"/>
    <ImageView
        android:id="@+id/iv_activitymain_add"
        android:layout_margin="40px"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_alignParentRight="true"
        android:src="@drawable/settingdeactive"/>
    <LinearLayout
        android:id="@+id/layout_buton"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_below="@id/iv_activitymain_setting"
        >
        <ImageView
            android:id="@+id/iv_activitymain_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/settingdeactive"
            android:layout_gravity="right"/>
        <ImageView
            android:id="@+id/iv_activitymain_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/settingdeactive"
            android:layout_gravity="left"/>

        </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_buton"/>

</RelativeLayout>
