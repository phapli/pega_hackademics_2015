<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="schooltasklist.pega.com.activity.ActivityCreateGroup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/rl_activitycreategroup_title"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_activitymain_setting"
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@drawable/settingdeactive"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_activitycreategroup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE GROUP"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/iv_activitymain_setting"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/iv_activitycreategroup_submit"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_iv_submit"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_activitycreategroup_title"
        android:id="@+id/et_activitycreategroup_nametask"
        android:hint="@string/hint_add_name_group"
        android:background="@drawable/cv_background_edittext"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_activitycreategroup_nametask"
        android:id="@+id/et_activitycreategroup_descrip"
        android:hint="@string/hint_add_des_group"
        android:background="@drawable/cv_background_edittext"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>
