<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="schooltasklist.pega.com.activity.ActivitySeting"
    android:paddingTop="200px" >

    <TextView
        android:text="Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"/>
    <View
        android:id="@+id/line"
        android:layout_width="500px"
        android:layout_height="4px"
        android:background="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155px"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:layout_below="@id/line"
            android:layout_marginTop="50px"
            android:layout_marginLeft="50px"
            android:text="Push Notification"/>
        <ImageView
            android:id="@+id/iv_activitysetting_push"
            android:layout_gravity="right"
            android:layout_width="120px"
            android:layout_height="50px"
            android:layout_below="@id/line"
            android:layout_marginRight="50px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50px"
            android:src="@drawable/off"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:layout_below="@id/line"
            android:layout_marginTop="150px"
            android:layout_marginLeft="50px"
            android:text="Time reminder"
            />
        <Spinner
            android:id="@+id/spiner_remind"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_below="@id/line"
            android:layout_marginRight="50px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150px"></Spinner>

        <ImageView
            android:id="@+id/iv_activitysettig_logout"
            android:layout_gravity="right"
            android:layout_width="120px"
            android:layout_height="50px"
            android:layout_below="@id/line"
            android:layout_marginRight="50px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="250px"
            android:src="@drawable/logout"/>

</RelativeLayout>
